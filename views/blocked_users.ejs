    </nav>
    <div>
        <%
            if (blocked_users)
            {
                var x = 0;
                while (blocked_users[x])
                {
        %>
                    <form action="/block_requests" method="post">
                        <p><%=blocked_users[x].blocker%> Requested to block <%=blocked_users[x].blocked_user%></p>
                        <input type="hidden" name="blocked_user" value=<%=blocked_users[x].blocked_user%>
                        <br />
                        <input type="hidden" name="blocker" value=<%=blocked_users[x].blocker%>
                        <br />
                        <input type="submit" name="submit" value="block">
                        <input type="submit" name="submit" value="reject">
                    </form>
        <%
                    x++;
                }
            }
        %>
